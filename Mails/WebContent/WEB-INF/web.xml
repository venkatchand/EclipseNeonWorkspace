<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Mails</display-name>
  <welcome-file-list>
    <welcome-file>mails.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>mail</servlet-name>
    <servlet-class>LoginValidation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mail</servlet-name>
    <url-pattern>/LoginValidation</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>welcome</servlet-name>
  <servlet-class>WelcomeMail</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>welcome</servlet-name>
  <url-pattern>/WelcomeMail</url-pattern>
  </servlet-mapping>
</web-app>